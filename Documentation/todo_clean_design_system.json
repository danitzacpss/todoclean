          "900": "#F1F5F9"
        },
        "neutral": {
          "background": "#0F172A",
          "surface": "#1E293B",
          "card": "#334155",
          "border": "#475569",
          "text": "#F8FAFC",
          "muted": "#94A3B8"
        }
      }
    },

    "typography": {
      "fontFamilies": {
        "primary": ["Poppins", "system-ui", "sans-serif"],
        "secondary": ["Lato", "system-ui", "sans-serif"],
        "accent": ["Montserrat", "system-ui", "sans-serif"]
      },
      "scales": {
        "hero": {
          "fontSize": "clamp(2.5rem, 5vw, 4rem)",
          "fontWeight": "700",
          "lineHeight": "1.1",
          "letterSpacing": "-0.02em"
        },
        "h1": {
          "fontSize": "clamp(2rem, 4vw, 3rem)",
          "fontWeight": "600",
          "lineHeight": "1.2",
          "letterSpacing": "-0.02em"
        },
        "h2": {
          "fontSize": "clamp(1.5rem, 3vw, 2.25rem)",
          "fontWeight": "600",
          "lineHeight": "1.3"
        },
        "h3": {
          "fontSize": "clamp(1.25rem, 2.5vw, 1.875rem)",
          "fontWeight": "600",
          "lineHeight": "1.4"
        },
        "body": {
          "fontSize": "1rem",
          "fontWeight": "400",
          "lineHeight": "1.6"
        },
        "bodyLarge": {
          "fontSize": "1.125rem",
          "fontWeight": "400",
          "lineHeight": "1.7"
        },
        "small": {
          "fontSize": "0.875rem",
          "fontWeight": "400",
          "lineHeight": "1.5"
        },
        "caption": {
          "fontSize": "0.75rem",
          "fontWeight": "500",
          "lineHeight": "1.4"
        }
      }
    },

    "spacing": {
      "scale": "1.25",
      "base": "1rem",
      "values": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "2xl": "3rem",
        "3xl": "4rem",
        "4xl": "6rem",
        "5xl": "8rem"
      }
    },

    "borderRadius": {
      "none": "0",
      "sm": "0.375rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem",
      "2xl": "1.5rem",
      "full": "9999px"
    },

    "shadows": {
      "light": {
        "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
        "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)",
        "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1)",
        "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1)",
        "card": "0 4px 20px -2px rgb(51 181 229 / 0.1)",
        "button": "0 4px 14px 0 rgb(51 181 229 / 0.2)"
      },
      "dark": {
        "sm": "0 1px 2px 0 rgb(0 0 0 / 0.3)",
        "md": "0 4px 6px -1px rgb(0 0 0 / 0.4)",
        "lg": "0 10px 15px -3px rgb(0 0 0 / 0.4)",
        "card": "0 4px 20px -2px rgb(56 189 248 / 0.2)"
      }
    },

    "components": {
      "card": {
        "structure": "Rounded rectangular container with subtle shadow",
        "variants": {
          "default": {
            "background": "white",
            "border": "1px solid neutral-200",
            "borderRadius": "lg",
            "shadow": "md",
            "padding": "xl"
          },
          "promotional": {
            "background": "gradient primary",
            "color": "white",
            "borderRadius": "xl",
            "shadow": "card"
          },
          "pricing": {
            "background": "neutral-50",
            "border": "2px solid primary-100",
            "borderRadius": "xl",
            "padding": "2xl"
          }
        }
      },
      
      "button": {
        "structure": "Rounded rectangular clickable element",
        "variants": {
          "primary": {
            "background": "primary-500",
            "color": "white",
            "padding": "md lg",
            "borderRadius": "lg",
            "shadow": "button",
            "fontWeight": "600",
            "transform": "translateY(0)",
            "transition": "all 0.2s ease"
          },
          "secondary": {
            "background": "transparent",
            "color": "primary-600",
            "border": "2px solid primary-500",
            "padding": "md lg",
            "borderRadius": "lg"
          },
          "ghost": {
            "background": "transparent",
            "color": "primary-600",
            "padding": "md lg"
          }
        },
        "states": {
          "hover": {
            "transform": "translateY(-2px)",
            "shadow": "xl",
            "scale": "1.05"
          },
          "active": {
            "transform": "translateY(0)",
            "scale": "0.98"
          }
        }
      },

      "badge": {
        "structure": "Small rounded label for status/category",
        "variants": {
          "discount": {
            "background": "primary-500",
            "color": "white",
            "padding": "sm md",
            "borderRadius": "full",
            "fontSize": "small",
            "fontWeight": "600"
          },
          "feature": {
            "background": "success-50",
            "color": "success-700",
            "padding": "xs sm",
            "borderRadius": "md"
          }
        }
      },

      "icon": {
        "structure": "SVG icons with consistent sizing",
        "sizes": {
          "sm": "1rem",
          "md": "1.5rem",
          "lg": "2rem",
          "xl": "3rem"
        },
        "variants": {
          "house": "Outlined house shape with sparkle",
          "checkmark": "Rounded checkmark in circle",
          "star": "Four-pointed star/sparkle",
          "calendar": "Calendar grid icon",
          "phone": "Phone handset icon",
          "email": "Envelope icon",
          "instagram": "Instagram logo"
        }
      }
    },

    "layout": {
      "containers": {
        "xs": "20rem",
        "sm": "24rem",
        "md": "28rem",
        "lg": "32rem",
        "xl": "36rem",
        "2xl": "42rem",
        "3xl": "48rem",
        "4xl": "56rem",
        "5xl": "64rem",
        "6xl": "72rem",
        "7xl": "80rem",
        "full": "100%"
      },
      "grid": {
        "columns": 12,
        "gap": "md",
        "responsive": {
          "sm": "1 column",
          "md": "2 columns",
          "lg": "3-4 columns",
          "xl": "4-6 columns"
        }
      }
    },

    "animations": {
      "transitions": {
        "fast": "0.15s ease-out",
        "normal": "0.2s ease-out",
        "slow": "0.3s ease-out"
      },
      "effects": {
        "fadeIn": {
          "from": { "opacity": "0", "transform": "translateY(20px)" },
          "to": { "opacity": "1", "transform": "translateY(0)" },
          "duration": "0.3s",
          "easing": "ease-out"
        },
        "slideUp": {
          "from": { "transform": "translateY(100%)" },
          "to": { "transform": "translateY(0)" },
          "duration": "0.4s",
          "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
        },
        "scaleIn": {
          "from": { "opacity": "0", "transform": "scale(0.95)" },
          "to": { "opacity": "1", "transform": "scale(1)" },
          "duration": "0.2s",
          "easing": "ease-out"
        },
        "bounce": {
          "keyframes": "0%, 20%, 53%, 80%, 100% { transform: translate3d(0,0,0); } 40%, 43% { transform: translate3d(0, -6px, 0); } 70% { transform: translate3d(0, -3px, 0); } 90% { transform: translate3d(0, -1px, 0); }",
          "duration": "1s",
          "easing": "ease-out"
        }
      }
    },

    "patterns": {
      "heroSection": {
        "structure": "Large heading + subtext + CTA + hero image",
        "layout": "Split layout on desktop, stacked on mobile",
        "elements": {
          "title": "Hero typography with primary color accent",
          "subtitle": "Body text with generous line-height",
          "cta": "Primary button with hover animations",
          "visual": "Clean lifestyle photography or illustration"
        }
      },
      
      "serviceCard": {
        "structure": "Icon + Title + Description + Features list + CTA",
        "layout": "Vertical card with consistent padding",
        "elements": {
          "icon": "Brand-colored service icon",
          "title": "H3 typography",
          "description": "Body text with limited character count",
          "features": "Checkmark list with primary color",
          "cta": "Secondary or ghost button"
        }
      },
      
      "pricingCard": {
        "structure": "Plan name + Price + Duration + Features + CTA",
        "layout": "Vertical card with highlighted pricing",
        "variants": {
          "basic": "Standard card styling",
          "popular": "Primary color border + badge",
          "premium": "Gradient background + elevated shadow"
        }
      },
      
      "testimonial": {
        "structure": "Quote + Avatar + Name + Role/Location",
        "layout": "Card with left-aligned or centered content",
        "styling": "Subtle background with generous whitespace"
      },
      
      "ctaSection": {
        "structure": "Compelling headline + supporting text + primary CTA",
        "layout": "Centered content with contrasting background",
        "variants": {
          "inline": "Integrated within page flow",
          "banner": "Full-width colored background",
          "modal": "Overlay with backdrop blur"
        }
      }
    },

    "content": {
      "tone": "Professional yet friendly, approachable and trustworthy",
      "voice": "Confident, helpful, community-focused",
      "messaging": {
        "value_props": [
          "Professional reliability",
          "Local community focus",
          "Personalized attention",
          "Safe, effective products",
          "Flexible scheduling",
          "Transparent pricing"
        ],
        "emotional_drivers": [
          "Peace of mind",
          "Time savings",
          "Professional results",
          "Trusted local service",
          "Stress reduction"
        ]
      }
    },

    "responsive": {
      "breakpoints": {
        "xs": "0px",
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      },
      "strategy": "Mobile-first approach with progressive enhancement",
      "adaptations": {
        "typography": "Fluid scaling using clamp()",
        "spacing": "Proportional reduction on smaller screens",
        "layout": "Stack vertically on mobile, grid on desktop",
        "images": "Responsive sizing with aspect-ratio preservation"
      }
    },

    "accessibility": {
      "colorContrast": "WCAG AA compliant (4.5:1 minimum)",
      "focusStates": "Visible focus indicators on all interactive elements",
      "semanticMarkup": "Proper heading hierarchy and landmark elements",
      "altText": "Descriptive alt text for all images",
      "keyboardNavigation": "Full keyboard accessibility",
      "screenReader": "ARIA labels and descriptions where needed"
    }
  }
}